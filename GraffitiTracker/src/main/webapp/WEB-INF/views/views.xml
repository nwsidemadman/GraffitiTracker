<!DOCTYPE tiles-definitions PUBLIC
      "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
      "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
  <!--<start id="tile_template"/> -->
  <definition name="template" template="/WEB-INF/views/main_template.jsp">
    <put-attribute name="header" value="/WEB-INF/views/tiles/Header.jsp" />
    <put-attribute name="side"
      value="/WEB-INF/views/login.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/tiles/Footer.jsp" />
  </definition>
  <!--<end id="tile_template"/> -->
  
  <definition name="info" template="/WEB-INF/views/info_template.jsp">
  </definition>

  <!--<start id="tile_home"/> -->
  <definition name="home" extends="template">
    <put-attribute name="content" value="/WEB-INF/views/home.jsp" />
  </definition>
  <!--<end id="tile_home"/> -->
  
  <!--<start id="tile_contact"/> -->
  <definition name="contact" extends="template">
    <put-attribute name="content" value="/WEB-INF/views/contact.jsp" />
  </definition>
  <!--<end id="tile_contact"/> -->
  
  <!--<start id="tile_about"/> -->
  <definition name="about" extends="template">
    <put-attribute name="content" value="/WEB-INF/views/about.jsp" />
  </definition>
  <!--<end id="tile_about"/> -->
  
  <!--<start id="tile_legal"/> -->
  <definition name="legal" extends="template">
    <put-attribute name="content" value="/WEB-INF/views/legal.jsp" />
  </definition>
  <!--<end id="tile_legal"/> -->
  
  <!--<start id="tile_privacy"/> -->
  <definition name="privacy" extends="template">
    <put-attribute name="content" value="/WEB-INF/views/privacy.jsp" />
  </definition>
  <!--<end id="tile_privacy"/> -->

</tiles-definitions>
